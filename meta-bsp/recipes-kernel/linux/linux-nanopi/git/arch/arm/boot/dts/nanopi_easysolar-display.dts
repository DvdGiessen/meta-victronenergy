#include "sun8i-h3-nanopi.dtsi"

/ {
	model = "Victron Energy Easysolar-Display";
	compatible = "friendlyarm,nanopi-neo", "allwinner,sun8i-h3";

	aliases {
		serial0 = &uart0;
		/* ethernet0 is the H3 emac, defined in sun8i-h3.dtsi */
		ethernet0 = &emac;
		ethernet1 = &xr819wifi;
 	};

	chosen {
				stdout-path = "serial0:115200n8";
	};

	vdd_wifi: vdd_wifi {
		compatible = "regulator-fixed";
		regulator-name = "wifi";
		regulator-min-microvolt = <1800000>;
		regulator-max-microvolt = <1800000>;
		gpio = <&r_pio 0 7 GPIO_ACTIVE_HIGH>;				// GPIOL7/WIFI_POWER_EN
		startup-delay-us = <70000>;
		enable-active-high;
	};

	reg_sy8113b: gpio-regulator {
			compatible = "regulator-gpio";
			regulator-name = "vdd-cpux";
			regulator-type = "voltage";
			regulator-boot-on;
			regulator-always-on;
			regulator-min-microvolt = <1100000>;
			regulator-max-microvolt = <1300000>;
			regulator-ramp-delay = <50>; /* 4ms */

			gpios = <&r_pio 0 6 GPIO_ACTIVE_HIGH>; /* PL6 */
			enable-active-high;
			gpios-states = <0x1>;
			states = <1100000 0x0
					  1300000 0x1>;
	};

	wifi_pwrseq: wifi_pwrseq {
		compatible = "mmc-pwrseq-simple";
		pinctrl-names = "default";
		pinctrl-0 = <&wifi_en_npi>;
		reset-gpios = <&pio 6 13 GPIO_ACTIVE_LOW>;		  // GPIOG13/WL_RESTN
		post-power-on-delay-ms = <50>;
	};
};

&pio {
	wifi_wake: wifi_wake@0 {
		pins = "PG10";
		function = "irq";
	};

	wifi_en_npi: wifi_en_pin {
		pins = "PG13";
		function = "gpio_out";
	};
};

&r_pio {
	sw_r_npi: key_pins@0 {
		pins = "PL3";
		function = "gpio_in";
	};

	vdd_cpux_r_npi: regulator_pins@0 {
		pins = "PL6";
		function = "gpio_out";
	};

	usb2_vbus_en_npi: usb2_vbus_pin {
		pins = "PL11";
		function = "gpio_out";
	};
};

&ehci2 {
	status = "okay";
};

&ohci2 {
	status = "okay";
};

&reg_usb2_vbus {
	status = "okay";
	gpio = <&r_pio 0 11 GPIO_ACTIVE_HIGH>;		  // GPIOL11/VUSB_ENABLE
	pinctrl-names = "default";
	pinctrl-0 = <&usb2_vbus_en_npi>;
};

&usbphy {
	usb2_vbus-supply = <&reg_usb2_vbus>;
};

&emac {
	phy-handle = <&int_mii_phy>;
	phy-mode = "mii";
	allwinner,leds-active-low;
	status = "okay";
};

&cpu0 {
	cpu-supply = <&reg_sy8113b>;
};

&spi0 {
	pitft@0 {
		status = "diabled";
	};

	pitft-ts@1 {
		status = "disabled";
	};
};

&spi1 {
	status = "disabled";
};

&rtc {
	status = "disabled";
};

&i2c0 {
	status = "okay";
	rtc1: pcf8523@68 {
		compatible = "nxp,pcf8523";
		status = "okay";
		reg = <0x68>;
	};

//	expander0: pca9555@20 {
//		compatible = "nxp,pca9555";
//		status = "okay";
//		reg = <0x20>;
//	};
};

&mmc0 {
	bus-width = <4>;
	cd-gpios = <&pio 5 6 GPIO_ACTIVE_HIGH>;
	cd-inverted;
	pinctrl-names = "default";
	pinctrl-0 = <&mmc0_pins_a>, <&mmc0_cd_pin>;
	status = "okay";
	vmmc-supply = <&reg_vcc3v3>;
};

&mmc1 {
	pinctrl-names = "default";
	pinctrl-0 = <&mmc1_pins_a>;
	vqmmc-supply = <&vdd_wifi>;
	vmmc-supply = <&reg_vcc3v3>;
	mmc-pwrseq = <&wifi_pwrseq>;
	bus-width = <4>;
	non-removable;
	status = "okay";

	xr819wifi: xr819wifi@1 {
		reg = <1>;
		compatible = "xradio,xr819";
		pinctrl-names = "default";
		pinctrl-0 = <&wifi_wake>;
		interrupt-parent = <&pio>;
		interrupts = <6 10 IRQ_TYPE_EDGE_RISING>;
		interrupt-names = "host-wake";
		local-mac-address = [dc 44 6d c0 ff ee];
	};
};

&mmc1_pins_a {
	bias-pull-up;
};


&uart1 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart1_pins>;
	status = "okay";
};

&uart2 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart2_pins>;
	status = "okay";
};

&uart3 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart3_pins>;
	status = "okay";
};

